<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <include layout="@layout/ribbon_news_and_rule" />

        <TextView
            android:id="@+id/txtMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:text="اعضای هیئت مدیره صنف عکاسان"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/asnafMemberRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:choiceMode="singleChoice" />


        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/asnaf_text"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_margin="5dp"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>