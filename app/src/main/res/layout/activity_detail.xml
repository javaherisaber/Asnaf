<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">
            <ImageView
                android:id="@+id/btnCloseImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:src="@drawable/img_close"
                android:layout_margin="10dp"/>

            <FrameLayout
                android:id="@+id/frameCounter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/backgriund_counter_circle">

                <TextView
                    android:id="@+id/txtCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <ImageView
                android:id="@+id/btnNextImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/img_next"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:layout_margin="15dp"/>
            <ImageView
                android:id="@+id/btnPreviousImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/img_previous"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:layout_margin="15dp"/>
        </RelativeLayout>
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/btnPlayImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_play"
            android:layout_margin="15dp"
            android:clickable="true"
            android:layout_gravity="bottom|center_horizontal"/>
    </FrameLayout>


</RelativeLayout>